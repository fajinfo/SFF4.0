<div class="ModalHeader">
    <a class="Close" onclick="$.fancybox.close(); return false;" href="#">×</a>
    <h2>Voulez-vous vraiment supprimer l'utilisateur ?</h2>
</div>
<div class="ModalContent Medium" style="max-height: 752px;">
    <table class="FormLayout">
        <tr>
            <td class="Label">Nom d'utilisateur</td>
            <td class="Field">{{ user.username }}</td>
        </tr>
        <tr>
            <td class="Label">Nom</td>
            <td class="Field">{{ user.nom }}</td>
        </tr>
        <tr>
            <td class="Label">Prénom</td>
            <td class="Field">{{ user.prenom }}</td>
        </tr>
        <tr>
            <td class="Label">E-Mail</td>
            <td class="Field">{{ user.email }}</td>
        </tr>
    </table>
</div>
<div class="ModalFooter Center">
    <a class="Button ShowLoading Cancel" href="#" onclick="$.fancybox.close(); return false;">Annuler</a>
    <a class="Button ShowLoading" href="{{ path('admin_user_supprimerok', { 'id': user.id }) }}">Supprimer</button>
    <div class="Clear"></div>
</div>
<script type="text/javascript">
    $('#Loading').hide();
    nexus.formatContentCallable();
</script>
