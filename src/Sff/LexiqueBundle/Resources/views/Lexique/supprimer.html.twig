<div class="ModalHeader">
    <a class="Close" onclick="$.fancybox.close(); return false;" href="#">×</a>

    <h2>Voulez-vous vraiment supprimer cette définition :</h2>
</div>
<div class="ModalContent Medium" style="max-height: 752px;">
    <table class="FormLayout">
        <tr>
            <td class="Label">Terme</td>
            <td class="Field">{{ definition.terme }}</td>
        </tr>
        <tr>
            <td class="Label">Genre</td>
            <td class="Field">{{ definition.genre }}</td>
        </tr>
        <tr>
            <td class="Label">Définition</td>
            <td class="Field">{{ definition.definition }}</td>
        </tr>
        <tr>
            <td class="Label">Créateur</td>
            <td class="Field">{{ definition.user.username }}</td>
        </tr>
    </table>
</div>
<div class="ModalFooter Center">
    <a class="Button ShowLoading Cancel" href="#" onclick="$.fancybox.close(); return false;">Annuler</a>
    <a class="Button ShowLoading" href="{{ path('admin_lexique_supprimerok', { 'id': definition.id }) }}">Supprimer</button>
        <div class="Clear"></div>
</div>
<script type="text/javascript">
    $('#Loading').hide();
    nexus.formatContentCallable();
</script>

